<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>jeuServlet</servlet-name>
        <servlet-class>fr.eni.servlets.jeuServlet</servlet-class>
        <init-param>
            <param-name>BORNE_SERVEUR</param-name>
            <param-value>3</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>jeuServlet</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>accueil</welcome-file> <!--la page qui va s'afficher en premier mais possible de lister toutes les pages-->
    </welcome-file-list>
</web-app>